
<h1>Current Matchups</h1>



<% @matchups.each do |matchup| %>
<%= form_tag(characters_path, :method => "get", id: "search-form") do %>
  <%= link_to "#{matchup.character.name} vs. #{matchup.opponent.name}", matchup_path(matchup) %>
<% end %>
  <% if current_user && current_user.admin? %>
    <%= link_to "Delete!", matchup_path(matchup), method: :delete %>
  <% end %>
<% end %>


<%= form_tag(matchups_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search matchups" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<%= paginate @matchups %>

