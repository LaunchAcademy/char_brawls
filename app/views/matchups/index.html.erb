<h1>Current Matchups</h1>

<% @matchups.each do |matchup| %>
  <p>
    <img src="/images/pokemon/<%= matchup.character.name %>.png" onerror="this.src='/images/pokemon/pokeball.png'" width = "100px" height = "100px">
    <%= link_to "#{matchup.character.name} vs. #{matchup.opponent.name}", matchup_path(matchup) %><img src="/images/pokemon/<%= matchup.opponent.name %>.png" onerror="this.src='/images/pokemon/pokeball.png'" width = "100px" height = "100px">
  </p>

  <% if current_user && current_user.admin? %>
    <%= link_to "Delete!", matchup_path(matchup), method: :delete %>
  <% end %>
<% end %>

<%= paginate @matchups %>

