<% @matchups.each do |matchup| %>

  <%= link_to "#{matchup.character.name} vs. #{matchup.opponent.name}", matchup_path(matchup) %> <br>

  <% if current_user && current_user.admin? %>
    <%= link_to "Delete!", matchup_path(matchup), method: :delete %>
  <% end %>
<% end %>

<%= link_to "Create a matchup", new_matchup_path %>

<%= paginate @matchups %>
