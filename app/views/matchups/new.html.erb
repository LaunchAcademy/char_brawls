<%= form_for @matchup do |f| %>

  <%= f.label :character_id, "Character One" %>
  <%= f.collection_select :character_id, Character.all, :id, :name %>

  <%= f.label :opponent_id, "Character Two" %>
  <%= f.collection_select :opponent_id, Character.all, :id, :name %>

  <%= f.submit "Submit" %>

<% end %>
