<h1>Character Choice</h1>

<ul class="small-block-grid-4">
  <% @characters.each do |character| %>
    <li><%= link_to character.name, character_path(character) %>   <img onerror="src='/images/pokemon/pokeball.png'" src="/images/pokemon/<%= character.name %>.png"></li>

    <% if current_user && current_user.admin? %>
      <%= link_to "Delete!", character_path(character), method: :delete %>
    <% end %>
  <%end%>
</ul>


<%= form_tag(characters_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search characters"%>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<% if !params[:search] %>
  <br><%= paginate @characters %><br>
<br><% end %><br>

